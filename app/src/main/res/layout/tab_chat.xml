<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/chatRootRelativeLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#08A3E1"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/chatHeadLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginTop="6dp"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="2dp">

		<cc.yuyeye.wk.Layout.CircleImageView
			android:id="@+id/chatTitleHeader"
			android:layout_width="43dp"
			android:layout_height="43dp"
			android:layout_gravity="center"
			android:src="@drawable/ic_notifications_white"
			app:border_width="1dp"
			app:drawable_scale="1.8"/>

		<LinearLayout
			android:id="@+id/ll_contact"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="3dp"
			android:layout_weight="1.0"
			android:background="@drawable/rounded_rectangle_white"
			android:clickable="true"
			android:gravity="center|center_horizontal"
			android:orientation="vertical"
			android:paddingBottom="2dp"
			android:paddingTop="2dp">

			<TextView
				android:id="@+id/tv_contacts"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:clickable="false"
				android:gravity="center"
				android:paddingTop="6dp"
				android:text="@string/allContacts"
				android:textColor="@color/colorPrimary"
				android:textSize="16sp"
				android:weightSum="1"/>

			<LinearLayout
				android:id="@+id/ll_netStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tv_nettype"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="WiFi"
					android:textColor="@color/colorPrimary"
					android:textSize="10sp"/>

				<TextView
					android:id="@+id/tv_lastlogintime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="I'm always by your side"
					android:textColor="@color/colorPrimary"
					android:textSize="10sp"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/chatDialogLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/chatMsgOutLinearLayout"
		android:layout_below="@+id/chatHeadLinearLayout"
		android:layout_margin="6dp"
		android:background="@drawable/rounded_background"
		android:gravity="center"
		android:orientation="vertical">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recyclerview_chat"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:padding="8dp"
			android:scrollbars="none"/>

		<ListView
			android:id="@+id/wk_chat_dialog"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:descendantFocusability="blocksDescendants"
			android:divider="#00000000"
			android:dividerHeight="1dp"
			android:padding="10dp"
			android:scrollbars="none"
			android:visibility="gone"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/chatMsgOutLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"
		android:gravity="bottom"
		android:orientation="horizontal"
		android:paddingBottom="6dp"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="0dp">

		<LinearLayout
			android:id="@+id/chatMsgLinearLayout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:orientation="horizontal"
			android:visibility="visible">

			<EditText
				android:id="@+id/chatMsgEditText"
				style="@style/AppTheme"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:background="@drawable/rounded_edittext"
				android:gravity="bottom|fill"
				android:hint="@string/please_input_msg"
				android:imeOptions="actionSend"
				android:maxLength="203"
				android:minHeight="48dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textColor="#000000"
				android:textSize="18sp"/>

			<cc.yuyeye.wk.Layout.CircleImageView
				android:id="@+id/chatCircleImageView"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_gravity="bottom"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="4dp"
				android:src="@drawable/ic_launcher"
				android:visibility="visible"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/chatActionToolBar"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="horizontal"
			android:visibility="gone">

			<Button
				android:id="@+id/chatButtonSelectAll"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_weight="1.0"
				android:background="@drawable/rounded_rectangle_white"
				android:text="全选"
				android:textColor="#000000"
				android:textSize="13sp"/>

			<Button
				android:id="@+id/chatButtonShare"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_weight="1.0"
				android:background="@drawable/rounded_rectangle_white"
				android:text="分享"
				android:textColor="#000000"
				android:textSize="13sp"/>

			<Button
				android:id="@+id/chatButtonDelete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_weight="1.0"
				android:background="@drawable/rounded_rectangle_white"
				android:text="删除"
				android:textColor="#FF0F00"
				android:textSize="13sp"/>

			<Button
				android:id="@+id/chatButtonCancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:background="@drawable/rounded_rectangle_white"
				android:text="取消"
				android:textColor="#000000"
				android:textSize="13sp"/>

		</LinearLayout>

	</LinearLayout>

</RelativeLayout>

